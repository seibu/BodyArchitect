<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.Icon?>
<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<View fx:id="meal" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.seibushin.bodyArchitect.views.MealController">
    <center>
        <VBox spacing="5.0">
            <children>
                <TextField fx:id="tf_name" promptText="Enter name">
                    <VBox.margin>
                        <Insets left="5.0" right="5.0"/>
                    </VBox.margin>
                </TextField>
                <HBox alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
                    <children>
                        <Label contentDisplay="RIGHT" styleClass="lbl_tag" text="Label" HBox.hgrow="NEVER">
                            <graphic>
                                <Icon content="CLEAR"/>
                            </graphic>
                            <padding>
                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                            </padding>
                        </Label>
                        <ComboBox fx:id="cb_type" prefWidth="150.0" promptText="Select type"/>
                    </children>
                    <VBox.margin>
                        <Insets left="5.0" right="5.0"/>
                    </VBox.margin>
                </HBox>
                <Slider fx:id="slider_portion" majorTickUnit="100.0" max="500.0" minorTickCount="100"
                        showTickLabels="true" showTickMarks="true" snapToTicks="true">
                    <VBox.margin>
                        <Insets left="5.0" right="5.0"/>
                    </VBox.margin>
                </Slider>
                <ListView fx:id="lv_food" prefHeight="100.0" styleClass="list-view-sliding" VBox.vgrow="ALWAYS">
                    <placeholder>
                        <Icon styleClass="list-placeholder" content="CLEAR_ALL"/>
                    </placeholder>
                </ListView>
                <ListView fx:id="lv_allFood" prefHeight="100.0" styleClass="list-view-sliding" VBox.vgrow="ALWAYS">
                    <placeholder>
                        <Icon styleClass="list-placeholder" content="CLEAR_ALL"/>
                    </placeholder>
                </ListView>
            </children>
        </VBox>
    </center>
</View>
