<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import com.gluonhq.charm.glisten.mvc.View?>

<View fx:id="meal" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.seibushin.bodyArchitect.views.MealController">
    <center>
        <VBox spacing="5.0">
            <children>
                <HBox spacing="5.0">
                    <children>
                        <TextField fx:id="tf_name" promptText="Enter name"/>
                        <ComboBox fx:id="cb_type" prefWidth="150.0" promptText="Select type"/>
                    </children>
                </HBox>
                <HBox spacing="5.0">
                    <children>
                        <ListView fx:id="lv_food" prefHeight="200.0" prefWidth="200.0"/>
                        <VBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#addFood" text="&lt;"/>
                                <TextField fx:id="tf_weight" promptText="weight"/>
                                <Button mnemonicParsing="false" onAction="#removeFood" text="&gt;"/>
                            </children>
                        </VBox>
                        <ListView fx:id="lv_allFood" prefHeight="200.0" prefWidth="200.0"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </VBox>
    </center>
</View>
