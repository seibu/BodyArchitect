<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<View fx:id="nutrition" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.seibushin.bodyArchitect.views.NutritionController">
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Day">
                    <content>
                        <VBox fx:id="vbox_nutrition" spacing="5.0">
                            <children>
                                <ListView fx:id="lv_meals" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Meal">
                    <content>
                        <VBox spacing="5.0">
                            <children>
                                <HBox alignment="TOP_RIGHT" spacing="5.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#deleteMeal" text="Delete" />
                                        <Button mnemonicParsing="false" onAction="#showMealAdd" text="Add" />
                                    </children>
                                </HBox>
                                <TableView fx:id="tv_meal" VBox.vgrow="ALWAYS" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Food">
                    <content>
                        <VBox spacing="5.0">
                            <children>
                                <HBox alignment="TOP_RIGHT" spacing="5.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#deleteFood" text="Delete" />
                                        <Button mnemonicParsing="false" onAction="#showFoodAdd" text="Add" />
                                    </children>
                                </HBox>
                                <TableView fx:id="tv_food" editable="true" VBox.vgrow="ALWAYS" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</View>
