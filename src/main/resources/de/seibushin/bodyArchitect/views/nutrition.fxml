<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.Icon?>
<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import jfxtras.scene.control.gauge.linear.SimpleMetroArcGauge?>

<View fx:id="nutrition" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.seibushin.bodyArchitect.views.NutritionController">
    <center>
        <TabPane fx:id="tb_nutrition" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Day">
                    <content>
                        <VBox fx:id="vbox_day" spacing="5.0">
                            <children>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Label text="Mo 05.09.2016" />
                              <Button mnemonicParsing="false" onAction="#showLogBook" styleClass="calendar">
                                 <graphic>
                                    <Icon content="TODAY" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="kcal" VBox.vgrow="ALWAYS" />
                                    <SimpleMetroArcGauge fx:id="mag_kcal" maxValue="5000.0" prefWidth="100.0" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER">
                                 <children>
                                    <Label text="protein" />
                                    <SimpleMetroArcGauge fx:id="mag_protein" maxValue="250.0" prefWidth="100.0" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER">
                                 <children>
                                    <Label text="fat" />
                                    <SimpleMetroArcGauge fx:id="mag_fat" maxValue="250.0" prefWidth="100.0" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER">
                                 <children>
                                    <Label text="carbs" />
                                    <SimpleMetroArcGauge fx:id="mag_carbs" maxValue="250.0" prefWidth="100.0" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <Label text="Meals" />
                                <ListView fx:id="lv_meals" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Meal">
                    <content>
                        <VBox spacing="5.0">
                            <children>
                                <HBox alignment="TOP_RIGHT" spacing="5.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#deleteMeal" text="Delete" />
                                        <Button mnemonicParsing="false" onAction="#showMealAdd" text="Add" />
                                    </children>
                                </HBox>
                                <TableView fx:id="tv_meal" VBox.vgrow="ALWAYS" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Food">
                    <content>
                        <VBox spacing="5.0">
                            <children>
                                <HBox alignment="TOP_RIGHT" spacing="5.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#deleteFood" text="Delete" />
                                        <Button mnemonicParsing="false" onAction="#showFoodAdd" text="Add" />
                                    </children>
                                </HBox>
                                <TableView fx:id="tv_food" editable="true" VBox.vgrow="ALWAYS" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                        </VBox>
                    </content>
                </Tab>
            <Tab text="Logs">
               <content>
                  <VBox fx:id="vbox_logs" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            </tabs>
        </TabPane>
    </center>
</View>
