<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.Icon?>
<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import jfxtras.scene.control.gauge.linear.SimpleMetroArcGauge?>

<View fx:id="nutrition" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.seibushin.bodyArchitect.views.NutritionController">
    <center>
        <TabPane fx:id="tb_nutrition" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Day">
                    <content>
                        <VBox fx:id="vbox_day" spacing="5.0">
                            <children>
                        <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                           <children>
                              <Button fx:id="btn_date" mnemonicParsing="false" onAction="#showLogBook" styleClass="calendar" text="Mo 05.09.2016">
                                 <graphic>
                                    <Icon content="TODAY" />
                                 </graphic>
                              </Button>
                           </children>
                           <VBox.margin>
                              <Insets left="5.0" right="5.0" />
                           </VBox.margin>
                        </HBox>
                        <HBox VBox.vgrow="NEVER">
                           <children>
                              <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="lbl_gauge" text="kcal" textOverrun="CLIP" VBox.vgrow="ALWAYS" />
                                    <StackPane alignment="BOTTOM_CENTER" VBox.vgrow="NEVER">
                                       <children>
                                          <SimpleMetroArcGauge fx:id="mag_kcal" maxValue="5000.0" prefHeight="100.0" prefWidth="100.0" />
                                          <Label fx:id="lbl_kcal_add" />
                                       </children>
                                    </StackPane>
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="lbl_gauge" text="protein" />
                                    <StackPane alignment="BOTTOM_CENTER" VBox.vgrow="NEVER">
                                       <children>
                                          <SimpleMetroArcGauge fx:id="mag_protein" maxValue="250.0" prefHeight="100.0" prefWidth="100.0" />
                                          <Label fx:id="lbl_protein_add" />
                                       </children>
                                    </StackPane>
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="lbl_gauge" text="fat" />
                                    <StackPane alignment="BOTTOM_CENTER" VBox.vgrow="NEVER">
                                       <children>
                                          <SimpleMetroArcGauge fx:id="mag_fat" maxValue="250.0" prefHeight="100.0" prefWidth="100.0" />
                                          <Label fx:id="lbl_fat_add" />
                                       </children>
                                    </StackPane>
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="lbl_gauge" text="carbs" />
                                    <StackPane alignment="BOTTOM_CENTER" VBox.vgrow="NEVER">
                                       <children>
                                          <SimpleMetroArcGauge fx:id="mag_carbs" maxValue="250.0" prefHeight="100.0" prefWidth="100.0" />
                                          <Label fx:id="lbl_carbs_add" />
                                       </children>
                                    </StackPane>
                                 </children>
                              </VBox>
                           </children>
                           <VBox.margin>
                              <Insets left="5.0" right="5.0" />
                           </VBox.margin>
                        </HBox>
                        <Label text="Meals" />
                                <ListView fx:id="lv_day_meals" prefHeight="100.0" prefWidth="400.0" styleClass="list-view-sliding" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Meal">
                    <content>
                        <VBox spacing="5.0">
                     <children>
                        <ListView fx:id="lv_meals" prefHeight="200.0" prefWidth="200.0" styleClass="list-view-sliding" VBox.vgrow="ALWAYS" />
                     </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Food">
                    <content>
                        <VBox spacing="5.0">
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                     <children>
                        <ListView fx:id="lv_food" prefHeight="200.0" prefWidth="200.0" styleClass="list-view-sliding" VBox.vgrow="ALWAYS" />
                     </children>
                        </VBox>
                    </content>
                </Tab>
            <Tab text="Logs">
               <content>
                  <VBox fx:id="vbox_logs" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            </tabs>
        </TabPane>
    </center>
</View>
